{
  "manifest_version": 3,
  "name": "CHL Chrome Activity Tracker",
  "description": "Tracks mouse and keyboard activity across all Chrome tabs for attendance.",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
