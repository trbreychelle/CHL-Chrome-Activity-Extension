{
  "manifest_version": 3,
  "name": "CHL Activity Tracker",
  "version": "1.1",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
